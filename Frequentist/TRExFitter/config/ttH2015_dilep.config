% Normal samples

Sample: "Data"
  Title: "Data 2015"
  Type: DATA
  NtupleFile: "data"

Sample: "ttH"
  Type: SIGNAL
  Title: "t#bar{t}H"
  TexTitle: "$t\bar{t}H$"
  FillColor: 2
  LineColor: 2
  NtupleFile: "ttH"
  MCweight: "10"
  UseMCstat: FALSE

Sample: "ttbar"
  Type: BACKGROUND
  Title: "t#bar{t} + jets"
  TexTitle: "$t\bar{t}$ + jets"
  FillColor: 0
  LineColor: 1
  NtupleFile: "ttbar"

Sample: "singleTop"
  Type: BACKGROUND
  Title: "Single Top"
  FillColor: 62
  LineColor: 1
  NtupleFile: "singleTop"

% --------------- %
% - NORMFACTORS - %
% --------------- %

NormFactor: "SigXsecOverSM"
  Title: "#it{#mu}(#it{t#bar{t}H})"
  Nominal: 1
  Min: -100
  Max: 100
  Samples: ttH

NormFactor: "mu_tt"
  Title: "#it{k}(#it{t#bar{t}})"
  Nominal: 1
  Min: 0
  Max: 2
  Samples: ttbar
  Constant: TRUE

NormFactor: "muLumi"
  Nominal: 1
  Min: 0
  Max: 100
  Samples: all
  Constant: TRUE

