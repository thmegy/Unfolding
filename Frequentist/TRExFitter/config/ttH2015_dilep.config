% --------------- %
% ---  JOB    --- %
% --------------- %

Job: "ttH2015_dilep"
  CmeLabel: "13 TeV"
  POI: "SigXsecOverSM"
  ReadFrom: NTUP
  NtuplePaths: "/afs/cern.ch/work/p/pinamont/public/flatNtup_TTHBB_test/"
  Label: "Dilepton"
  LumiLabel: "85 pb^{-1}"
  MCweight: "FinalWeight*weight_leptonSF*weight_bTagSF"
  Lumi: 84.9676
  Selection: "(ee || emu || mumu)"
  PlotOptions: "LEFT,NOXERR,NOENDERR"
  NtupleName: "nominal"
  DebugLevel: 0
  MCstatThreshold: 0.001
  MCstatConstraint: "Poisson"
  SystControlPlots: TRUE
  SystPruningShape: 0.01
  SystPruningNorm: 0.01
  SystLarge: 0.90
  CorrelationThreshold: 0.20
  HistoChecks: NOCRASH
  SplitHistoFiles: TRUE
  ImageFormat: "png"
  SystCategoryTables: TRUE
  RankingPlot: "all"
  RankingMaxNP: 10
  DoSummaryPlot: FALSE
  DoTables: TRUE
  DoSignalRegionsPlot: TRUE
  DoPieChartPlot: TRUE

% --------------- %
% ---  FIT    --- %
% --------------- %

Fit: "fit"
  FitType: SPLUSB
  FitRegion: CRSR
  POIAsimov: 1
  UseMinos: SigXsecOverSM

% --------------- %
% ---  LIMIT    --- %
% --------------- %

Limit: "limit"
  LimitType: ASYMPTOTIC

% --------------- %
% --- REGIONS --- %
% --------------- %

Region: "dilep_All"
  Type: SIGNAL
  Variable: "0",1,0,1
  VariableTitle: "-"
  Label: "All"
  NtuplePathSuffs: "5j3b","ge6jge4b"

