% --------------- %
% ---  JOB    --- %
% --------------- %

Job: "ttH2015_test1"
  CmeLabel: "13 TeV"
  POI: "SigXsecOverSM"
  ReadFrom: NTUP
  NtuplePaths: "/afs/cern.ch/work/p/pinamont/public/flatNtup_TTHBB_test/"
  Label: "Single Lepton CR"
  LumiLabel: "85 pb^{-1}"
  MCweight: "FinalWeight*weight_leptonSF*weight_bTagSF"
  Lumi: 84.9676
  Selection: "trigger>0 && (e_jets || mu_jets)"
  PlotOptions: "NOSIG,OVERSIG"
  NtupleName: "nominal"
  DebugLevel: 1
  MCstatThreshold: NONE
  SystControlPlots: TRUE
  HistoChecks: NOCRASH
  SplitHistoFiles: TRUE   % set this in order to have separated .root files in Histograms/ for different regions
  ImageFormat: "png"

% --------------- %
% ---  FIT    --- %
% --------------- %

Fit: "fit"
  FitRegion: CRSR
  FitType: SPLUSB
  POIAsimov: 1

% --------------- %
% ---  LIMIT    --- %
% --------------- %

Limit: "limit"
  LimitType: ASYMPTOTIC

% --------------- %
% --- REGIONS --- %
% --------------- %

Region: "HThad_4j2b"
  Type: CONTROL
  Variable: "HhadT_jets/1e3",20,100,1100
  VariableTitle: "H_{T}^{had} [GeV]"
  Label: "4 j, 2 b"
  ShortLabel: "4j,2b"
  NtuplePathSuff: "4j2b"
  Binning: 100,200,250,300,350,400,450,500,550,600,700,1100
  BinWidth: 50

Region: "HThad_5j3b"
  Type: CONTROL
  Variable: "HhadT_jets/1e3",30,100,1600
  VariableTitle: "H_{T}^{had} [GeV]"
  Label: "5 j, 3 b"
  ShortLabel: "5j,3b"
  NtuplePathSuff: "5j3b"
  Binning: 100,200,300,400,500,600,1000,1600
  BinWidth: 100

% --------------- %
% --- SAMPLES --- %
% --------------- %

Sample: "Data"
  Title: "Data 2015"
  Type: DATA
  NtupleFile: "data"

Sample: "ttH"
  Type: SIGNAL
  Title: "t#bar{t}H"
  FillColor: 2
  LineColor: 2
  NtupleFile: "ttH"
  NormFactor: "SigXsecOverSM",1,-10,100

Sample: "ttbar"
  Type: BACKGROUND
  Title: "t#bar{t} + jets"
  FillColor: 0
  LineColor: 1
  NtupleFile: "ttbar"

Sample: "singleTop"
  Type: BACKGROUND
%   Title: "Single Top"
  Title: "W + jets"
  FillColor: 62
  LineColor: 1
  NtupleFile: "singleTop"


% --------------- %
% - NORMFACTORS - %
% --------------- %

NormFactor: "muTtbar"
  Title: "#mu (t#bar{t})"
  Min: 0
  Max: 10
  Nominal: 1
  Constant: TRUE
  Samples: ttbar

NormFactor: "muLumi"
  Title: "Lumi Scale"
  Min: 0
  Max: 100
  Nominal: 1
  Constant: TRUE
  Samples: all


% --------------- %
% - SYSTEMATICS - %
% --------------- %

% Normalization only

Systematic: "stXsec"
  Title: "Single top x-section"
  Type: OVERALL
  OverallUp:    0.05
  OverallDown: -0.05
  Samples: singleTop

Systematic: "ttXsec"
  Title: "t#bar{t} x-section"
  Type: OVERALL
  OverallUp:    0.10
  OverallDown: -0.10
  Samples: ttbar

% Systematics with separate tree

Systematic: "JES_Scenario1_NP1";"JES_Scenario1_NP2";"JES_Scenario1_NP3"
  Title: "JES NPScenario 1 - NP 1";"JES NPScenario 1 - NP 2";"JES NPScenario 1 - NP 3"
  Type: HISTO
  Samples: all
  NtupleNameUp: "JET_NPScenario1_JET_GroupedNP_1__1up";"JET_NPScenario1_JET_GroupedNP_2__1up";"JET_NPScenario1_JET_GroupedNP_3__1up"
  NtupleNameDown: "JET_NPScenario1_JET_GroupedNP_1__1down";"JET_NPScenario1_JET_GroupedNP_2__1down";"JET_NPScenario1_JET_GroupedNP_3__1down"
  Smoothing: 40
  Symmetrisation: TWOSIDED

